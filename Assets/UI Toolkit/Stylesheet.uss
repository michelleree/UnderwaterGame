:root {
}

.label {
    font-size: 50px;
    -unity-text-align: upper-left;
}

.title-label {
    -unity-font-style: bold;
    font-size: 70px;
    -unity-text-align: upper-center;
    margin-top: 60px;
    margin-right: 60px;
    margin-bottom: 60px;
    margin-left: 60px;
    color: rgb(255, 255, 255);
}

.button {
    font-size: 50px;
    width: 500px;
    background-color: rgb(157, 174, 237);
    border-top-left-radius: 30px;
    border-top-right-radius: 30px;
    border-bottom-right-radius: 30px;
    border-bottom-left-radius: 30px;
    height: 100px;
    margin-top: 30px;
    margin-right: 30px;
    margin-bottom: 30px;
    margin-left: 30px;
}

.quit-button {
    background-color: rgb(237, 157, 163);
}

.play-button {
}

.play-button:hover {
    background-color: rgb(104, 117, 162);
    color: rgb(255, 255, 255);
}

.quit-button:hover {
    color: rgb(255, 255, 255);
    background-color: rgb(143, 93, 97);
}

.main-button {
    background-color: rgb(205, 213, 241);
}

.main-button:hover {
    background-color: rgb(117, 121, 136);
    color: rgb(255, 255, 255);
}
